{
    "Operator": {
        "description": "Mechanism for validating various operator, but ultimately must reference data",
        "type": "object",
        "properties": {
            "sourceType": {
                "type": "string"
            },
            "sourceObj": {
                "type": "object",
                "properties": {
                    "source": {"$ref": "source.json#/Source"},
                    "sources":{
                        "type": "array",
                        "minItems": 2,
                        "items": {"$ref": "source.json#/Source"}
                    }
                },
                "oneOf": [
                    {
                        "required": [
                            "source"
                        ]
                    },
                    {
                        "required": [
                            "sources"
                        ]
                    }
                ]
            }
        },
        "required": [
            "sourceType",
            "sourceObj"
        ]
    }
}