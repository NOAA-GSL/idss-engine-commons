{
    "AvailableIssue": {
        "description": "A request to determine what issue date/time is(are) available",
        "type": {"$ref": "#/Request"}
    },

    "AvailableValid": {
        "description": "A list of specific time_string(s)",
        "type": "array",
        "items": {"$ref": "#/TimeString"},
        "minItems": 1
    },
    
    "AvailableLead": {
        "description": "Date/time string specifying the start and end date/times",
        "type": "object",
        "properties": {
            "start": {"$ref": "#/TimeString"},
            "end": {"$ref": "#/TimeString"}
        },
        "required": [
            "start",
            "end"
        ]
    },
    
    "AvailableField": {

    },

    "AvailableRequest": {
        "description": "Either an AvailableIssue, AvailableValid, AvailableLead, or AvailableField",
        "oneOf": [
            {"$ref": "#/AvailableIssue"},
            {"$ref": "#/AvailableValid"},
            {"$ref": "#/AvailableLead"},
            {"$ref": "#/AvailableField"}
        ]
    }
}