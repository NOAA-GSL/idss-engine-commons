{
    "Units": {
        "description": "Identifier for supported units",
        "type": "string",
        "enum": ["Criteria", "ThreatLevel", "Inches", "Feet", "Meters", "MPH",
                 "Knots", "F", "C", "K", "Percent", "MPH"]
    },

    "UnitOpr": {
        "description": "Mechanism for making a request for data to be returned with specific units",
        "type": "object",
        "properties": {
            "sourceType": {
                "type": "string",
                "const": "units"
            },
            "sourceObj": {
                "type": "object",
                "properties": {
                    "units": {"$ref": "#/Units"},
                    "source": {"$ref": "source.json#/Source"}
                },
                "required": [
                    "units",
                    "source"
                ]
            }
        },
        "required": [
            "sourceType",
            "sourceObj"
        ]
    }
}