{
    "Product": {
        "description": "The product name used to identify a variable",
        "type": "string",
        "enum": ["NBM", "NBM.AWS", "NBM.AWS.GRIB"]
    },
    
    "FieldName": {
        "description": "The field name used to identify a variable",
        "type": "string",
        "enum": ["TEMP", "WINDSPEED"]
    },

    "Fields": {
        "description": "One or more FieldNames",
        "oneOf": [
            {"$ref": "#/FieldName"},
            {
                "type": "array",
                 "items": {"$ref": "#/FieldName"},
                 "uniqueItems": true
            }
        ]
    },

    "ProductType": {
        "description": "The product and field name used to identify a variable",
        "type": "object",
        "properties": {
            "product": {"$ref": "#/Product"},
            "field": {"$ref": "#/Fields"}
        }
    },

    "Variable": {
        "description": "Minimum information needed to identify a variable",
        "allOf": [{ "$ref": "#/ProductType" }],
        "properties": {
            "issueDt": {"type": "string", "format": "date-time"},
            "validDt": {"type": "string", "format": "date-time"}
        },
        "required": [
            "issueDt",
            "validDt"
        ]
    }
}