{
    "FieldName": {
        "description": "Identifier for a known field",
        "type": "string",
        "enum": [
          "TEMP",
          "WINDSPEED",
          "WINDGUST",
          "DEWPOINT",
          "RH",
          "RAIN1HR",
          "SNOW1HR",
          "ICE1HR"
        ]
    },

    "FieldList": {
        "description": "A list of specific field(s)",
        "type": "array",
        "items": {"$ref": "#/FieldName"}
    },

    "Field": {
        "description": "Either a FieldName, or FieldList",
        "oneOf": [
            {"$ref": "#/FieldName"},
            {"$ref": "#/FieldList"}
        ]
    }
}
