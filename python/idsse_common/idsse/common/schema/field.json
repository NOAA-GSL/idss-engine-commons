{
    "FieldName": {
        "description": "Identifier for a known field",
        "type": "string",
        "enum": ["TEMP", "WINDSPEED"]
    },

    "FieldList": {
        "description": "A list of specific field(s)",
        "type": "array",
        "items": {"$ref": "#/FieldName"},
        "minItems": 1
    },

    "Field": {
        "description": "Either a FieldName, or FieldList",
        "oneOf": [
            {"$ref": "#/FieldName"},
            {"$ref": "#/FieldList"}
        ]
    }
}